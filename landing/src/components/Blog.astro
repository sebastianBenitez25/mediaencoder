---
import Container from "./Container.astro";
import ShieldIcon from "../icons/ShieldIcon.astro";
import NetworkIcon from "../icons/NetworkIcon.astro";
import Meta from "../icons/MetaIcon.astro";

const items = [
  {
    title: "Tu web no puede ser una tarjeta de presentación.",
    description: "Creamos páginas que venden y conectamos todo con un CRM para automatizar tus ventas.",
    Icon: ShieldIcon
  },
  {
    title: "Contenido estratégico con apoyo de IA.",
    description: "Creamos piezas que informan, convierten y nutren. Potenciadas con herramientas como OpenAI.",
    Icon: NetworkIcon
  },
  {
    title: "Diseño humano con resultados reales.",
    description: "Creamos experiencias memorables que reflejan tu esencia y generan impacto.",
    Icon: Meta
  }
];
---

<div id="blog">
  <Container>
    <div class="mb-12 space-y-2 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white">
        Todo lo que necesitás, en un solo equipo
      </h2>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        items.map(({ title, description, Icon }) => (
          <div class="group p-6 sm:p-8 rounded-3xl bg-gray-800 border border-gray-700 bg-opacity-50 shadow-none">
            <div class="relative overflow-hidden rounded-xl">
              <Icon />
            </div>
            <div class="mt-6">
              <h3 class="text-2xl font-semibold text-white">
                {title}
              </h3>
              <p class="mt-6 mb-8 text-gray-300">
                {description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</div>
